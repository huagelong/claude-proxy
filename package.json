{
  "name": "claude-proxy-monorepo",
  "version": "2.0.4",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "bun --filter '*' dev",
    "dev:go": "cd backend-go && make dev",
    "dev:go:install": "cd backend-go && make install-air",
    "build": "bun --filter '*' build && bun run postbuild",
    "build:go": "cd backend-go && make build",
    "postbuild": "node scripts/postbuild.js",
    "start": "bun --filter claude-proxy-backend start",
    "start:go": "cd backend-go && ./claude-proxy-go",
    "type-check": "bun --filter '*' type-check",
    "clean": "rm -rf */dist */node_modules node_modules",
    "clean:go": "cd backend-go && make clean"
  },
  "devDependencies": {
    "bun-types": "latest",
    "prettier": "^3.6.2",
    "typescript": "^5.5.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  }
}
